<div class="row">
  <div class="list-group">
    {{#each messages as |message|}}
      <div class="list-group-item">
        <h4 class="list-group-item-heading">{{message.user.name}} - {{message.createdAt}}</h4>
        <p class="list-group-item-text">{{message.content}}</p>
      </div>
    {{/each}}
  </div>
</div>
