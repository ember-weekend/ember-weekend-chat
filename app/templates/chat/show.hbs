<div class="row">
  <div class="list-group">
    {{#each messages as |message|}}
      <div class="list-group-item">
        <span class="list-group-item-heading">{{message.user.name}}</span>
        -
        <span>{{moment-from-now message.createdAt}}</span>
        :
        <span class="list-group-item-text">{{message.content}}</span>
      </div>
    {{/each}}
  </div>
  {{bs-input value=message}}
</div>
